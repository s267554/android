<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="it.polito.mad.team19lab2.ItemListFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_item_list">
        <argument
            android:name="item_id1"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_home_to_itemDetailsFragment"
            app:destination="@id/nav_item_detail"
            app:launchSingleTop="false" />
        <action
            android:id="@+id/action_nav_home_to_showProfileFragment"
            app:destination="@id/showProfileFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_nav_home_to_nav_edit_item"
            app:destination="@id/nav_edit_item" />
    </fragment>
    <fragment
        android:id="@+id/nav_item_detail"
        android:name="it.polito.mad.team19lab2.ItemDetailsFragment"
        android:label="@string/item_deatails_bar">
        <argument
            android:name="item_id1"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_item_detail_to_nav_edit_item"
            app:destination="@id/nav_edit_item"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_nav_item_detail_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_edit_item"
        android:name="it.polito.mad.team19lab2.EditItemFragment"
        android:label="@string/item_edit_bar"
        tools:layout="@layout/fragment_edit_item">
        <argument
            android:name="item_id1"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_edit_item_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_nav_edit_item_to_nav_item_detail"
            app:destination="@id/nav_item_detail"
            app:popUpTo="@id/nav_item_detail"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="it.polito.mad.team19lab2.ShowProfileFragment"
        android:label="@string/profile_bar">
        <action
            android:id="@+id/action_showProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="it.polito.mad.team19lab2.EditProfileFragment"
        android:label="@string/profile_edit_bar">
        <action
            android:id="@+id/action_editProfileFragment_to_showProfileFragment"
            app:destination="@id/showProfileFragment"
            app:popUpTo="@id/showProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onSaleListFragment"
        android:name="it.polito.mad.team19lab2.OnSaleListFragment"
        android:label="OnSaleListFragment" >
        <action
            android:id="@+id/action_onSaleListFragment_to_nav_item_detail"
            app:destination="@id/nav_item_detail" />
    </fragment>
</navigation>