<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="it.polito.mad.team19lab2.ItemListFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_item_list">

        <action
            android:id="@+id/action_nav_home_to_itemDetailsFragment"
            app:destination="@id/nav_item_detail"
            app:launchSingleTop="false" />
        <action
            android:id="@+id/action_nav_home_to_showProfileFragment"
            app:destination="@id/showProfileFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_nav_home_to_nav_edit_item"
            app:destination="@id/nav_edit_item" />
    </fragment>
    <fragment
        android:id="@+id/nav_item_detail"
        android:name="it.polito.mad.team19lab2.ItemDetailsFragment"
        android:label="Item details">
        <argument
            android:name="item_id1"
            app:argType="string"
            android:defaultValue="item_id" />
        <action
            android:id="@+id/action_nav_item_detail_to_nav_edit_item"
            app:destination="@id/nav_edit_item"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_edit_item"
        android:name="it.polito.mad.team19lab2.EditItemFragment"
        android:label="Edit Item"
        tools:layout="@layout/fragment_edit_item">
        <argument
            android:name="item_id1"
            android:defaultValue="item_id"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_edit_item_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="false"
            app:uri="it.polito.mad.team19lab2/editItem"/>
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="it.polito.mad.team19lab2.ShowProfileFragment"
        android:label="ShowProfileFragment" >
        <action
            android:id="@+id/action_showProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="it.polito.mad.team19lab2.EditProfileFragment"
        android:label="EditProfileFragment" />
</navigation>