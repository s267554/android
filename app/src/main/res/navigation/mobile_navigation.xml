<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="it.polito.mad.team19lab2.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_home_to_itemDetailsFragment"
            app:destination="@id/nav_item_detail" />
        <action
            android:id="@+id/action_nav_home_to_showProfileFragment"
            app:destination="@id/showProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="it.polito.mad.team19lab2.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="it.polito.mad.team19lab2.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_item_detail"
        android:name="it.polito.mad.team19lab2.ItemDetailsFragment"
        android:label="Item details">
        <action
            android:id="@+id/action_itemDetailsFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_item_detail_to_nav_edit_item"
            app:destination="@id/nav_edit_item" />
    </fragment>
    <fragment
        android:id="@+id/nav_edit_item"
        android:name="it.polito.mad.team19lab2.EditItemFragment"
        android:label="Edit Item"
        tools:layout="@layout/fragment_edit_item">
        <action
            android:id="@+id/action_nav_edit_item_to_nav_item_detail"
            app:destination="@id/nav_item_detail"
            app:popUpTo="@id/nav_item_detail" />
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="it.polito.mad.team19lab2.ShowProfileFragment"
        android:label="ShowProfileFragment" >
        <action
            android:id="@+id/action_showProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_showProfileFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="it.polito.mad.team19lab2.EditProfileFragment"
        android:label="EditProfileFragment" >
        <action
            android:id="@+id/action_editProfileFragment_to_showProfileFragment"
            app:destination="@id/showProfileFragment" />
    </fragment>
</navigation>